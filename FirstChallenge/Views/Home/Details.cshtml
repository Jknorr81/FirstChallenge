@model FirstChallenge.Models.ComicBook
@{
    ViewBag.Title = "Details";
}

<h2>Details About @Model.ComicTitle #@Model.EpisodeNumber</h2>
<h3>Episode Title: @Model.EpisodeTitle</h3>
@{ 
    var character = @Model.Characters.Select(p => p.Name).ToArray();
    var charactersString = string.Join(", ", character);
}

<p><strong>Starring: </strong>@charactersString</p>
<hr />
<p>@Html.ActionLink("Back to All Comics", "Index", new { controller = "Home", action = "Index", id = UrlParameter.Optional })</p>

